@import "./BookCity.skeleton.wxss";
.page{
  width:100%;
  height:100%;
}
.left{
  float:left;
  width:20%;
  background: rgb(240, 233, 233);
  height:100%;
  position:fixed;
}
.list{
  width:80%;
  padding:10%;
  height:60rpx;
  line-height: 60rpx;
  text-align:center;
}
.list-touch{
  width:80%;
  padding:10%;
  height:60rpx;
  line-height: 60rpx;
  text-align:center;
  background: #fff;
  color: red;
}
.right{
  float:right;
  width:80%;
}
.booklist{
  padding:10rpx;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.img{
  width:100rpx;
  height:150rpx;
  float:left;
  margin-right:20rpx;
}
.bookinformation{
  float:left;
  width:78%;
  padding-top:10rpx;
}
.name{
  width:100%;
  overflow: hidden;
}
.author{
  width:100%;
  overflow:hidden;
  margin-top:50rpx;
  font-size:26rpx;
  color:rgba(0, 0, 0, 0.6)
}
.box{
  width:100%;
  height:100%;
  background:rgba(0, 0, 0, 0.3);
  position:fixed;
  top:0;
  bottom:0;
}
.jump-box{
  position: fixed;
  top: 40%;
  left: 25%;
  width:400rpx;
  height:200rpx;
  background: rgba(255, 255, 255, 1);
  border-radius:10rpx;
  box-shadow:2px 2px 2px 2px rgba(34, 31, 31, 0.5);
}
.jump{
  font-size:32rpx;
  text-align: center;
  width:100%;
  line-height:130rpx;
  height:130rpx; 
}
.but-box{
  display: flex;
  height:69rpx;
  line-height:69rpx;
  text-align: center;
  border-top:1px solid #ccc;
}
.yes{
  width:50%;
  border-right:1px solid #ccc;
}
.no{
  width:50%;
}
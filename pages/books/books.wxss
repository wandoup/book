/* pages/books/books.wxss */
page{
  width:100%;
  height:100%;
}
.title{
  height:60rpx;
  line-height:60rpx;
  border-bottom:1rpx solid #ccc;
  text-align:right;
  padding-right:45rpx;
}
.title image{
  margin-top:5rpx;
  margin-left:30rpx;
  width:50rpx;
  height:50rpx;
}
.box{
  width:96%;
  margin:0 auto;
  text-align: center;
  padding:0 15rpx;
}
.book-box{
  padding-left:15rpx;
  margin-top:15rpx;
  width:220rpx;
  height:360rpx;
  float:left;
}
.book-box image{
  width:216rpx;
  height:300rpx;
}
.bookadd{
  margin-top:15rpx;
  width:216rpx;
  height:300rpx;
  overflow: hidden;
  float:left;
  border:1rpx solid #ccc;
  margin-left:15rpx;
}
.bookadd image{
  margin-top:45rpx;
  width:200rpx;
  height:200rpx;
}
/* pages/books/books.wxss */
page{
  width:100%;
  height:100%;
}
.delout-box{
  width:100%;
  height:100%;
  background:rgba(0, 0, 0, 0.3);
  position:fixed;
  top:0;
  bottom:0;
}
.delete-box{
  position: fixed;
  top: 40%;
  left: 25%;
  width:400rpx;
  height:200rpx;
  background: rgba(255, 255, 255, 1);
  border-radius:10rpx;
  box-shadow:2px 2px 2px 2px rgba(34, 31, 31, 0.5);
}
.del{
  font-size:32rpx;
  text-align: center;
  width:100%;
  line-height:130rpx;
  height:130rpx; 
}
.but-box{
  display: flex;
  height:69rpx;
  line-height:69rpx;
  text-align: center;
  border-top:1px solid #ccc;
}
.yes{
  width:50%;
  border-right:1px solid #ccc;
}
.no{
  width:50%;
}
.box{
  width:96%;
  height:100%;
  margin:0 auto;
  text-align: center;
  padding:0 15rpx;
}
.book-box{
  padding-left:15rpx;
  margin-top:15rpx;
  width:220rpx;
  height:360rpx;
  float:left;
}
.bookbox-image{
  width:216rpx;
  height:300rpx;
}
.bookbox-text{
  display: inline-block;
  width:216rpx;
  height:50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:35rpx;
}
.bookadd{
  margin-top:15rpx;
  width:216rpx;
  height:300rpx;
  overflow: hidden;
  float:left;
  border:1rpx solid #ccc;
  margin-left:15rpx;
}
.bookadd-image{
  margin-top:45rpx;
  width:200rpx;
  height:200rpx;
}
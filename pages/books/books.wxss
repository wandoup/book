/* pages/books/books.wxss */
@import "./books.skeleton.wxss";
page{
  width:100%;
  height:100%;
}
.delout-box{
  width:100%;
  height:100%;
  background:rgba(0, 0, 0, 0.3);
  position:fixed;
  top:0;
  bottom:0;
}
.delete-box{
  position: fixed;
  top: 40%;
  left: 25%;
  width:400rpx;
  height:200rpx;
  background: rgba(255, 255, 255, 1);
  border-radius:10rpx;
  box-shadow:2px 2px 2px 2px rgba(34, 31, 31, 0.5);
}
.del{
  font-size:32rpx;
  text-align: center;
  width:100%;
  line-height:130rpx;
  height:130rpx; 
}
.but-box{
  display: flex;
  height:69rpx;
  line-height:69rpx;
  text-align: center;
  border-top:1px solid #ccc;
}
.yes{
  width:50%;
  border-right:1px solid #ccc;
}
.no{
  width:50%;
}
.box{
  width:100%;
  height:100%;
  margin:0 auto;
  text-align: center;
}
.book-box{
  padding-left: 50rpx;
  margin-top: 32rpx;
  width: 190rpx;
  height: 420rpx;
  float: left;
  text-align: left;
}
.bookbox-image{
  width:190rpx;
  height:270rpx;
  border-radius: 10rpx;
}
.bookbox-text{
  margin-top: 8px;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.bookadd{
  margin-top: 32rpx;
  width: 190rpx;
  height: 270rpx;
  overflow: hidden;
  float: left;
  margin-left: 50rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}
.bookadd-image{
  margin-top: 75rpx;
  width:120rpx;
  height:120rpx;
}
.read-status{
  color: #b0b0b3;
  font-size: 20rpx;

}
.search{
  padding:20rpx 20rpx 5rpx 20rpx;
  padding-left:60rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.3);
}
.search-input{
  height:60rpx;
  width:80%;
  background:#ccc;
  float:left;
  padding-left:15rpx;
  border-radius:20rpx;
}
.search-image{
  width:60rpx;
  height:60rpx;
  margin-left:20rpx;
}
.recommend-title{
  padding:10rpx 20rpx 0 20rpx;
}
.recommend-text{
  font-weight: bold;
  margin-bottom:20rpx;
  display: block;
}
.recommend-box{
  overflow: hidden;
}
.recommend{
  width:50%;
  height:80rpx;
  line-height:80rpx;
  float:left;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.3);
  overflow:hidden;
}
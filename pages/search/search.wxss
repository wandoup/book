.search{
  padding:20rpx 20rpx 5rpx 20rpx;
  padding-left:60rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.3);
}
.search-input{
  height:60rpx;
  width:80%;
  background:#ccc;
  float:left;
  padding-left:15rpx;
  border-radius:20rpx;
}
.search-image{
  width:60rpx;
  height:60rpx;
  margin-left:20rpx;
}
.book-title{
  padding:5rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.3);
  overflow: hidden;
}
.title-img{
  width:120rpx;
  height:185rpx;
  float:left;
  margin:5rpx;
  overflow: hidden;
}
.book{
  padding:5rpx;
  margin-left:10rpx;
  float:left;
  overflow:hidden;
}
.name{
  width:520rpx;
  display: block;
  overflow:hidden;
}
.author{
  width:520rpx;
  display:block;
  overflow:hidden;
  margin-top:70rpx;
  font-size:26rpx;
  color:rgba(0, 0, 0, 0.6);
}
page{
  width:100%;
}
.collection-title{
  width:100%;
  height:120rpx;
  line-height:120rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight:bold;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.3);
}
.collection{
  padding-left:20rpx;
  height:120rpx;
  line-height:120rpx;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.2);
  display:flex;
}
.collection-name{
  width:400rpx;
  overflow: hidden;
}
.collection-author{
  color: #ccc;
  font-size: 32rpx;
  width:280rpx;
  margin-left:30rpx;
  overflow: hidden;
  text-align:right;
}
page{
  width:100%;
  height:100%;
}
.personal{
  width:100%;
  height:30%;
  text-align: center;
  padding-top:100rpx;
  background:rgba(224, 96, 96, 0.74);
}
.personal-img{
  overflow: hidden;
  margin:0 auto;
  width:200rpx;
  height:200rpx;
  border-radius: 100rpx;
}
.personal-text{
  width:100%;
  margin-top: 20rpx;
}
.information{
  width: 100%;
}
.information-list{
  padding:10rpx 20rpx;
  width: 100%;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.information-ico{
  width:60rpx;
  height:60rpx;
  float: left;
  margin-top:10rpx;
}
.information-text{
  float:left;
  margin-left:15rpx;
}
.information-img{
  float:right;
  width: 60rpx;
  height: 60rpx;
  margin:10rpx 30rpx 0 0;
}